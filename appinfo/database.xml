<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="https://apps.nextcloud.com/schema/apps/database.xsd">
    <name>*dbname*</name>
    <table>
        <name>*dbprefix*document</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <length>8</length>
                <unsigned>true</unsigned>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
                <primary>true</primary>
            </field>
            <field>
                <name>file_id</name>
                <type>integer</type>
                <length>8</length>
                <unsigned>true</unsigned>
                <notnull>false</notnull>
                <autoincrement>false</autoincrement>
                <primary>false</primary>
                <default></default>
            </field>
            <field>
                <name>title</name>
                <type>text</type>
                <length>200</length>
                <notnull>true</notnull>
                <default></default>
            </field>
            <field>
                <name>user_id</name>
                <type>text</type>
                <length>200</length>
                <notnull>true</notnull>
            </field>
            <!-- FK Organisation -->
            <field>
                <name>organisation_id</name>
                <type>integer</type>
                <length>8</length>
                <unsigned>true</unsigned>
                <notnull>false</notnull>
                <default></default>
            </field>
            <field>
                <name>creation_date</name>
                <type>date</type>
                <notnull>false</notnull>
                <default></default>
            </field>
            <field>
                <name>status</name>
                <type>smallint</type>
                <notnull>false</notnull>
            </field>
        </declaration>
	</table>
    <table>
        <name>*dbprefix*organisation</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <length>8</length>
                <unsigned>true</unsigned>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
                <primary>true</primary>
            </field>
            <field>
                <name>name</name>
                <type>text</type>
                <length>200</length>
                <notnull>true</notnull>
                <default></default>
            </field>
            <field>
                <name>logo</name>
                <type>blob</type>
                <notnull>false</notnull>
                <default></default>
            </field>
            <field>
                <name>logo_date</name>
                <type>date</type>
                <notnull>false</notnull>
                <default></default>
            </field>
            <field>
                <name>email</name>
                <type>text</type>
                <length>200</length>
                <notnull>false</notnull>
                <default></default>
            </field>
            <field>
                <name>url</name>
                <type>text</type>
                <length>200</length>
                <notnull>false</notnull>
                <default></default>
            </field>
        </declaration>
    </table>
</database>